@model IEnumerable<Product_Wizard.Models.Image>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Download</title>


    @Styles.Render("~/COntent/table.css"),
    @Styles.Render("~/COntent/icon.css")
