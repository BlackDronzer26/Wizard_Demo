                <th>Sr.No</th>
                <th>Name</th>
                <th>Size</th>
                <th>Link</th>
                <th> Download</th>

                @{ int count = 1;}
            </tr>
            @foreach (var item in Model)
            {


                <tr>
                    @*<td  ><a href='@string.Format("/Employee/update?id={0}", item.ID)'>@item.ID</a></td>*@
                    <td style="text-align:center">@count @*@item.Product_Id*@ </td>
                    <td>@item.Name</td>
                    <td style="text-align:center">@item.size</td>
                    <td style="text-align:center">@item.link</td>
                    <td style="text-align:center"><a href='@string.Format("/Image/Download?id={0}", item.Id)' onclick="return ('Downloading')"><span style="color:red; ">Download</span></td>

                    @{ count = count + 1; }
                </tr>
                        }
        </table>






